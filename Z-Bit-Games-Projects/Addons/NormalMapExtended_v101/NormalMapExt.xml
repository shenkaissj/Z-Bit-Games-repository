      <type>float</type>
      <initial>1</initial>
      <uniform>colorR</uniform>
    </param>
    <param>
      <name>Color (Green)</name>
      <description>Color (Green) 0 to 1</description>
      <type>float</type>
      <initial>1</initial>
      <uniform>colorG</uniform>
    </param>
    <param>
