<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>NormalMapExt</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>NormalMap Extended</name>		<!-- The displayed name of the effect -->
	<category>Color</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>Normal Map for 2D games</description>
	<author>Donelwero and Matriax</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>true</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the shader does not modify the opaque areas of the foreground. In other words
		 any opaque pixels in the original image are output in the same position and still fully opaque.
		 This is used to optimise the front-to-back renderer's depth pass, since it can still write depth
		 and skip overdraw for any objects using only shaders which preserve opaqueness. -->
	<preserves-opaqueness>false</preserves-opaqueness>
	
	<!-- Set to true if the effect changes over time, e.g. Noise or Warp effects. -->
	<animated>false</animated>
	

	
	<!-- Parameters -->
	<parameters>
		<!-- An example parameter, with the following tags:
			name: the displayed name of the parameter
			description: appears at the bottom of the properties bar when selected
			type: either float or percent.  Percent is just a float but displayed x 100.
			initial: initial value of the parameter
			uniform: name of the corresponding uniform variable in the .fx file.
			
			You can add as many parameters as you like.
		-->
		  
		  
		  
<!-- LIGHT 1 --> 	
		<param>
			<name>Light X Position</name>
			<description>Light Position (X)</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>posX</uniform>
		</param>
    <param>
      <name>Light YPosition</name>
      <description>Light Position (Y)</description>
      <type>float</type>
      <initial>0.0</initial>
      <uniform>posY</uniform>
    </param>
    <param>
      <name>Light ZPosition</name>
      <description>Light Position (Z)</description>
