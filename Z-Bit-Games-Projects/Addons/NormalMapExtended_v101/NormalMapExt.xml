      <uniform>colorB</uniform>
    </param>
    <param>
      <name>Light Luminosity</name>
      <description>Luminosity) 0 to 1</description>
      <type>float</type>
      <initial>1</initial>
      <uniform>lightLum</uniform>
    </param>
     <param>      
        <name>Ambient (Red)</name>
      <description>Ambient (Red) 0 to 1</description>
      <type>float</type>
      <initial>0.5</initial>
      <uniform>ambientR</uniform>
    </param>
    <param>
      <name>Ambient (Green)</name>
      <description>Ambient (Green) 0 to 1</description>
      <type>float</type>
      <initial>0.5</initial>
      <uniform>ambientG</uniform>
    </param>
    <param>
      <name>Ambient (Blue)</name>
      <description>Ambient (Blue) 0 to 1</description>
      <type>float</type>
      <initial>0.5</initial>
      <uniform>ambientB</uniform>
    </param>
    <param>
      <name>Ambient Luminosity</name>
      <description>Luminosity) 0 to 1</description>
      <type>float</type>
      <initial>0.5</initial>
      <uniform>ambientLum</uniform>
    </param>  
    <param>      
        <name>falloffV1</name>
      <description>falloffV1 - Light size/intensity in the middle ¿? Lower=Bright</description>
      <type>float</type>
      <initial>0.1</initial>
      <uniform>falloffV1</uniform>
    </param>
    <param>
